@model IEnumerable<tp4.Models.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>
    films ordonnés dans l’ordre croissant par nom
</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie_Added)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genres.GenreName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Movie_Added)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genres.GenreName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
